<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/basic_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/kurzgesagtbgrd">
            <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:weightSum="10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:text="y="
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/parameter1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:inputType="numberSigned|numberDecimal"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="x"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.26"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:paddingTop="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/parameter2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:paddingTop="10dp"
                    android:inputType="numberDecimal|numberSigned"
                    android:textSize="30dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="x"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.26"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:paddingTop="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/parameter3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:inputType="numberDecimal|numberSigned"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="x"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.26"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:paddingTop="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/parameter4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:inputType="numberDecimal|numberSigned"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:text="x"
                    android:textSize="30dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:text="+"
                    android:textSize="30dp"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/parameter5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:inputType="numberDecimal|numberSigned"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:layout_gravity="">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/deleteButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_dark"
                    android:text="C"
                    android:textSize="40dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="630dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3">
            </com.github.mikephil.charting.charts.LineChart>
            <androidx.cardview.widget.CardView
                android:id="@+id/executeBCardView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.12">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/executeB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_blue_dark"
                    android:drawableTop="@drawable/baseline_border_color_24"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/undoBCardView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.24">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/undoB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_red_dark"
                    android:drawableTop="@drawable/baseline_replay_24"/>
            </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/basic_graph_bnav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        app:itemTextColor="@color/white"
        app:itemTextAppearanceActive="@color/white"
        app:menu="@menu/basic_graph_bnav"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>